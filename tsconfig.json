{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2015",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": false,
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2023"],
    "paths": {
      "@src/*": ["./src/*"],
      "*": ["./types/*.d.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./types", "./src/custom.d.ts"]
  }
}
