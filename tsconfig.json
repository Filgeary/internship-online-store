{
  "compilerOptions": {
    "target": "ESNext", //
    "lib": ["DOM", "DOM.Iterable", "ESNext"], //
    "outDir": "dist",
    "allowJs": true, //
    "skipLibCheck": true, //
    "esModuleInterop": true, //
    "allowImportingTsExtensions": true, //
    "strict": true, //
    "noFallthroughCasesInSwitch": true, //
    "module": "ESNext", //
    "moduleResolution": "Node", //
    "resolveJsonModule": true, //
    "noImplicitAny": true, //
    "isolatedModules": true, //
    "noEmit": true, //
    "jsx": "react-jsx", // тип jsx
    "baseUrl": "./", // базовый url
    "paths": {
      "@src/*": ["./src/*"] // alias
    }
  },
  "include": ["src"], // включения "src/entry-client.tsx", "src/entry-server.tsx"
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.spec.ts"] // исключения
}
