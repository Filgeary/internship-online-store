{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist",
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@custom-types/*": ["./custom-types/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "custom-types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.js",
    "src/**/*.jsx",
    "dist",
    "img",
    "api-examples",
    "node_modules",
    "./dist/**/*"
  ]
}

