{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "extends": "@tsconfig/vite-react/tsconfig.json"
}
