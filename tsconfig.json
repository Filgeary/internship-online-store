{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": false,
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["./src/*"],
      "*": ["./types/*.d.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./global.d.ts"]
  }
}
