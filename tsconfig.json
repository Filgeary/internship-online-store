{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "allowSyntheticDefaultImports": true
    }
  },
}