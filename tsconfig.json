{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true, // разрешить any

    "resolveJsonModule": true,
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  }
}
